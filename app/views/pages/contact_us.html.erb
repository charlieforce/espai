<div class="about_middle_section common_middle_class">
   <div class="container  text-center white"> 
    <div class="whiteline"></div>
    <h1>CONTACT US</h1>
   </div> <!-- container -->
</div>

<div class="container margin_50 accord" style="margin-bottom:50px">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Contact Us</h1>

      <br/>
      <%= form_tag contact_submit_path do %>
        <div class="form-group">
          <%= text_field_tag :name, "",autofocus: true, placeholder: "Full Name", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= text_field_tag :email, "", placeholder: "Email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= text_area_tag :message, "", :size =>"48x3", placeholder: "Message", class: "form-control" %>
        </div>

        <div class="actions">
          <%= submit_tag "Send", class: "btn btn-normal btn-block" %>
        </div>
      <% end %>
      
    </div>
  </div>

</div>
